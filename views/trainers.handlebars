<!-- trainers handlebars -->

<style>
table, th, td{
	border: 1px solid black;
}
</style>

<h1>Trainers in the Database:</h1>
<h4>Note: After adding information, hit the Submit button - DO NOT PRESS ENTER</h4>

<form id="addTrainer" action="/trainers" method="post">
    Name: <br><input type="text" name="name"><br><br>
    Catchphrase: <br><input type="text" name="catchphrase"><br><br>
    <input type="submit" value="Submit">
</form>
<br>

<table>
	<thead>
		<th>Name</th>
		<th>Catchphrase</th>
		<th>Delete</th>
		<th>Update</th>
	</thead>
	<tbody>
		{{#each trainers}}
		<tr>
			<td>{{name}}</td>
			<td>{{catchphrase}}</td>
			<td><button onclick="deleteTrainer({{id}})">Delete</button></td>
			<td><a href="/trainers/{{id}}">Update Trainer Info</a></td>
		</tr>
		{{/each}}
	</tbody>

	<!-- add form to add a pokemon, if we whish to do so here. -->

</table>

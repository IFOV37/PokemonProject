<!-- gyms handlebars --> 

<style>
table, th, td{
	border: 1px solid black;
}
</style>

<h1>Gyms in the Pokedex:</h1>
<h4>Note: After adding information, hit the Submit button - DO NOT PRESS ENTER</h4>

<form id="addGym" action="/gyms" method="post">
    Name: <br><input type="text" name="name"><br><br>
    Trainer: <br><select name="trainer">
    {{#each trainers}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
</select><br><br>
    Badge: <br><select name="badge">
    {{#each badges}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
</select><br><br>
    <input type="submit" value="Submit">
</form>
<br>

<table>
	<thead>
		<th>Name</th>
		<th>Gym Leader</th>
		<th>Gym Badge</th>
		<th>Delete</th>
		<th>Update</th>
	</thead>
	<tbody>
		{{#each gyms}}
		<tr>
			<td>{{name}}</td>
			<td>{{GymLeader}}</td>
			<td>{{GymBadge}}</td>
			<td><button onclick="deleteGym({{id}})">Delete</button></td>
			<td><a href="/gyms/{{id}}">Update Gym Info</a></td>
		</tr>
		{{/each}}
	</tbody>

	<!-- add form to add a pokemon, if we whish to do so here. -->

</table>

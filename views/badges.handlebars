<!-- badges handlebars --> 

<h1>Badges in the Database:</h1>

<table>
	<thead>
		<th>Name</th>
		<th>Color</th>
	</thead>
	<tbody>
		{{#each badges}}
		<tr>
			<td>{{name}}</td>
			<td>{{color}}</td>
			<td><button onclick="deleteBadge({{id}})">Delete</button></td>
			<td><a href="/badges/{{id}}">Update Badge Info</a></td>
		</tr>
		{{/each}}
	</tbody>

	<!-- add form to add a pokemon, if we whish to do so here. -->

</table>

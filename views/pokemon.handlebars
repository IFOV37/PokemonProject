<!-- pokemon handlebars file -->

<style>
table, th, td{
	border: 1px solid black;
}
</style>

<h1>Pokemon in the Pokedex:</h1>
<h3>NOTE: All Pokemon are added without a trainer because Pokemon are wild creatures. Trainers can be updated later."</h3>

<form id="addPokemon" action="/pokemon" method="post">
    Name: <br><input type="text" name="name"><br><br>
    Type: <br><input type="text" name="type"><br><br>
    Attack: <br><input type="text" name="attack"><br><br>
    <input type="submit" value="Submit">
</form>

<table>
	<thead>
		<th>Name</th>
		<th>Type</th>
		<th>Attack</th>
		<th>Trainer</th>
		<th>Delete</th>
		<th>Update</th>
	</thead>
	<tbody>
		{{#each pokemon}}
		<tr>
			<td>{{name}}</td>
			<td>{{type}}</td>
			<td>{{attack}}</td>
			<td>{{Trainer}}</td>
			<td><button onclick="deletePokemon({{id}})">Delete</button></td>
			<td><a href="/pokemon/{{id}}">Update Pokemon Info</a></td>
		</tr>
		{{/each}}
	</tbody>

	<!-- add form to add a pokemon, if we whish to do so here. -->

</table>
